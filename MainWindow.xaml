<Window x:Class="PiT_Practice_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Практическая работа 1" Height="450" Width="600">
    <Grid Margin="10">
        <!-- Image для отображения скриншота -->
        <Image Name="ImageDisplay" Height="114" Width="255" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Source="/formula1.jpg"/>

        <!-- Labels -->
        <Label Content="Введите значение x:" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top"/>
        <Label Content="Введите значение y:" HorizontalAlignment="Left" Margin="10,170,0,0" VerticalAlignment="Top"/>
        <Label Content="Результат:" HorizontalAlignment="Left" Margin="10,250,0,0" VerticalAlignment="Top"/>

        <!-- TextBoxes -->
        <TextBox Name="TextBoxX" Width="120" HorizontalAlignment="Left" Margin="140,130,0,0" VerticalAlignment="Top"/>
        <TextBox Name="TextBoxY" Width="120" HorizontalAlignment="Left" Margin="140,170,0,0" VerticalAlignment="Top"/>
        <TextBox Name="TextBoxResult" Width="120" HorizontalAlignment="Left" Margin="140,250,0,0" VerticalAlignment="Top" IsReadOnly="True"/>

        <!-- RadioButtons для выбора функции -->
        <GroupBox Header="Выберите функцию f(x):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="300,10,0,0" Width="250" Height="120">
            <StackPanel>
                <RadioButton Name="RadioButtonSinh" Content="sh(x)" IsChecked="True"/>
                <RadioButton Name="RadioButtonSquare" Content="x^2"/>
                <RadioButton Name="RadioButtonExp" Content="e^x"/>
            </StackPanel>
        </GroupBox>

        <!-- Buttons -->
        <Button Name="ButtonCalculate" Content="Вычислить" HorizontalAlignment="Left" Margin="300,150,0,0" VerticalAlignment="Top" Width="100" Click="ButtonCalculate_Click"/>
        <Button Name="ButtonClear" Content="Очистить" HorizontalAlignment="Left" Margin="300,200,0,0" VerticalAlignment="Top" Width="100" Click="ButtonClear_Click"/>
    </Grid>
</Window>